{% macro text( name, value, id, placeholder, required, parameters ) %}
    {% set parameters = parameters|default( {} )|merge( {
        class: 'form-control',
        id: id,
        text: placeholder,
        placeholder: placeholder
    } ) %}
    {% if required %}
        {% set parameters = parameters|merge( { 'required': 'required' } ) %}
    {% endif %}

    {{ form_text( name, value, parameters ) }}
{% endmacro %}

{% macro password( name, id, placeholder, required, parameters ) %}
    {% set parameters = parameters|default( {} )|merge( {
        class: 'form-control',
        id: id,
        text: placeholder,
        placeholder: placeholder
    } ) %}
    {% if required %}
        {% set parameters = parameters|merge( { 'required': 'required' } ) %}
    {% endif %}

    {{ form_password( name, parameters ) }}
{% endmacro %}

{% macro label( for, text, class, parameters ) %}
    {% set parameters = parameters|default( {} )|merge( {
        class: class ~ ' control-label'
    } ) %}
    {{ form_label( for, text, parameters ) }}
{% endmacro %}

{% macro submit( text, id, color, class, parameters ) %}
    {% set parameters = parameters|default( {} )|merge( {
        id: id,
        class: class ~ ' btn btn-' ~ color
    } ) %}
    {{ form_submit( text, parameters ) }}
{% endmacro %}