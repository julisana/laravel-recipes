{% macro text( name, value, id, placeholder, required ) %}
    {% set parameters = {
        class: 'form-control',
        id: id,
        text: placeholder,
        placeholder: placeholder
    } %}
    {% if required %}
        {% set parameters = parameters|merge( { 'required': 'required' } ) %}
    {% endif %}

    {{ form_text( name, value, parameters ) }}
{% endmacro %}

{% macro password( name, id, placeholder, required ) %}
    {% set parameters = {
        class: 'form-control',
        id: id,
        text: placeholder,
        placeholder: placeholder
    } %}
    {% if required %}
        {% set parameters = parameters|merge( { 'required': 'required' } ) %}
    {% endif %}

    {{ form_password( name, parameters ) }}
{% endmacro %}

{% macro label( for, text, class ) %}
    {{ form_label( for, text, { class: class ~ ' control-label' } ) }}
{% endmacro %}

{% macro submit( text, id, color, class ) %}
    {{ form_submit( text, { id: id, class: class ~ ' btn btn-' ~ color } ) }}
{% endmacro %}
