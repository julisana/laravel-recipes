{% if key is not defined %}
    {% set key = 0 %}
{% endif %}
<div class="row direction">
    <div class="col-md-11">
        {{ form.text( 'directions[0][name]', old( 'directions[' ~ key ~ '][name]', '' ), '', 'direction-name', 'Direction' ) }}
        <br />
        {{ form.textarea( 'directions[0][notes]', old( 'directions[' ~ key ~ '][notes]', '' ), '', 'direction-notes', 'Direction Notes', false, 2 ) }}
        <br />
        {{ form.file( 'directions[0][photo][]', '', 'custom-file-input direction-photo', 'Add Photo (Optional)' ) }}
        {{ form.hidden( 'directions[0][id]', old( 'directions[' ~ key ~ '][id]', '' ) ) }}
    </div>
    <div class="col-md-1 pl-1 pr-1">
        <span class="btn btn-light sort-item d-none w-100">&#9776;</span>
        <br /><br />
        <span class="btn btn-danger remove-item d-none w-100" data-row="{{ key }}">X</span>
    </div>
</div>
