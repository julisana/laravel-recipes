{% extends 'layout' %}

{% import 'macros.form' as form %}

{% block content %}
    <div class="row">
        <div id="auth" class="col-md-4 col-md-offset-1">
            <div id="auth-login">
                {{ form_open({ 'route': 'auth.login', 'method': 'post', 'id': 'login' }) }}
                <div class="form-group">
                    {{ form.label( 'username', 'Username' ) }}
                    {{ form.text( 'username', old( 'usrename' ), 'username', 'Enter username', true ) }}
                </div>
                <div class="form-group">
                    {{ form.label( 'password', 'Password' ) }}
                    {{ form.password( 'password', 'password', 'Enter password', true ) }}
                </div>
                <div class="form-group">
                    {{ form.submit( 'Login', 'login', 'primary' ) }}
                    <a href="#">Forgot Your Password?</a>
                </div>
                {{ form_close() }}
            </div>
        </div>
    </div>
{% endblock content %}