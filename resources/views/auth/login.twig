{% extends 'layout' %}

{% block content %}
    <div class="row">
        <div id="auth" class="col-md-4 col-md-offset-1">
            <div id="auth-login">
                {{ form_open({'route': 'auth.login', 'method': 'post', 'id': 'login'}) }}
                    <div class="form-group">
                        {{ form_label( 'username', 'Username' ) }}
                        {{ form_text('username', old('username'), {'class': 'form-control', 'id': 'username', 'required': 'required', 'placeholder': 'Enter username'}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label( 'password', 'Password' ) }}
                        {{ form_text('password', null, {'class': 'form-control', 'id': 'password', 'required': 'required', 'placeholder': 'Enter password'}) }}
                    </div>
                    <div class="form-group">
                        {{ form_token() }}
                        {{ form_submit('Login', {'id': 'login', 'class': 'btn btn-primary'}) }}
                        <a href="#">Forgot Your Password?</a>
                    </div>
                {{ form_close() }}
            </div>
        </div>
    </div>
{% endblock content %}
