<!DOCTYPE html>
<html lang="en/us">
    <head>
        <title>{% block title %}{% endblock %} | Furious Foodie</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css" />
        <link rel="stylesheet" href="{{ asset( 'css/app.css' ) }}" type="text/css" />

        {% block styles %}{% endblock styles %}
        {% block header_scripts %}{% endblock header_scripts %}

        {% import 'macros.meta' as meta %}

        {% block meta %}
            {% block meta_canonical %}{% endblock %}
            {% block meta_title %}
                {{ meta.itemprop( 'name', 'FuriousFoodie (dot) com' ) }}
                {{ meta.property( 'og:title', 'FuriousFoodie (dot) com' ) }}
                {{ meta.name( 'twitter:title', 'FuriousFoodie (dot) com' ) }}
            {% endblock %}
            {% block meta_sitename %}
                {#{ meta.name( 'twitter:site', '@julisana' ) }#}
                {{ meta.property( 'og:site_name', 'Furious Foodie' ) }}
                {{ meta.name( 'twitter:card', 'summary' ) }}
            {% endblock %}
            {% block meta_description %}
                {{ meta.name( 'description', 'Find your favorite recipes with the Furious Foodie' ) }}
                {{ meta.property( 'og:description', 'Find your favorite recipes with the Furious Foodie' ) }}
                {{ meta.property( 'twitter:description', 'Find your favorite recipes with the Furious Foodie' ) }}
            {% endblock %}
            {% block meta_image %}
                {#{ meta.itemprop( 'image', '' ) }#}
                {{ meta.property( 'og:image', '' ) }}
                {{ meta.name( 'twitter:image:src', '' ) }}

                {{ meta.property( 'og:image:url', '' ) }}
                {{ meta.property( 'og:image:width', '' ) }}
                {{ meta.property( 'og:image:height', '' ) }}
            {% endblock %}
            {% block meta_other %}{% endblock %}
        {% endblock meta %}
    </head>

    <body>
        <header>
            {% include 'navigation' %}
        </header>

        <div class="container">
            {% include 'messages' %}

            <div class="row">
                <div class="col-md-6">
                    <h2>{% block pageTitle %}{% endblock %}</h2>
                </div>
                {% if buttons is not empty %}
                    {% include 'buttons' %}
                {% endif %}
            </div>
            <div class="row">&nbsp;</div>

            {% block content %}{% endblock %}

            <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

            {% block footer_scripts %}{% endblock footer_scripts %}
            <footer>
                <hr/>
            </footer>
        </div>
    </body>
</html>
