{% extends 'layout' %}

{% block content %}
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                {{ user.username }}<br />
                {{ user.email }}<br />
                {{ user.first_name }}<br />
                {{ user.last_name }}<br />
                {{ user.created_at }}
            </div>
            <div class="col-md-6">
                <ul>
                    {% for recipe in user.createdRecipes %}
                        <li><a href="{{ url_route( 'recipes.show', [ str_slug(recipe.name), recipe.id ] ) }}">{{ recipe.name }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
