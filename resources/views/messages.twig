{% if messages.errors is not empty or messages.success is not empty or messages.warning is not empty or errors is not empty %}
    <div id="messages" class="col-md-6">
        {% if messages.errors is not empty or errors is not empty %}
            {% if messages.errors is iterable %}
                <div class="row">
                    <div class="alert alert-danger col-xs-12">
                        {% for error in messages.errors %}
                            <p>
                                <span class="glyphicon glyphicon-exclamation-sign"></span>
                                <strong>{{ error|raw }}</strong>
                            </p>
                        {% endfor %}
                    </div>
                </div>
            {% elseif messages.errors is not empty %}
                <div class="row">
                    <div class="alert alert-danger col-xs-12">
                        <span class="glyphicon glyphicon-exclamation-sign"></span>
                        {{ messages.errors|raw }}
                    </div>
                </div>
            {% endif %}

            {% if errors.any %}
                <div class="row">
                    <div class="alert alert-danger col-xs-12">
                        {% for error in errors.all %}
                            <p>
                                <span class="glyphicon glyphicon-exclamation-sign"></span>
                                <strong>{{ error|raw }}</strong>
                            </p>
                        {% endfor %}
                    </div>
                </div>
            {% elseif errors is not empty %}
                <div class="row">
                    <div class="alert alert-danger col-xs-12">
                        <span class="glyphicon glyphicon-exclamation-sign"></span>
                        <strong>{{ errors|raw }}</strong>
                    </div>
                </div>
            {% endif %}
        {% endif %}
        {% if messages.success is not empty %}
            <div class="row">
                <div class="alert alert-success col-xs-12">
                    {% if messages.success is iterable %}
                        {% for success in messages.success %}
                            <p>
                                <span class="glyphicon glyphicon-ok-sign"></span> {{ success|raw }}
                            </p>
                        {% endfor %}
                    {% elseif messages.success is not empty %}
                        <span class="glyphicon glyphicon-ok-sign"></span>
                        {{ messages.success|raw }}
                    {% endif %}
                </div>
            </div>
        {% endif %}
        {% if messages.warning is not empty %}
            <div class="row">
                <div class="alert alert-warning col-xs-12">
                    {% if messages.warning is iterable %}
                        {% for warning in messages.warning %}
                            <p>
                                <span class="glyphicon glyphicon-question-sign"></span> {{ warning|raw }}
                            </p>
                        {% endfor %}
                    {% elseif messages.warning is not empty %}
                        <span class="glyphicon glyphicon-question-sign"></span>
                        {{ messages.warning|raw }}
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
{% endif %}
